@model GearOptimizer.Models.Boss

@{ 
    ViewData["Title"] = "Add Boss";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Weakness)
    @Html.TextBoxFor(model => model.Weakness)

    @Html.LabelFor(model => model.AtkStyle)
    @Html.TextBoxFor(model => model.AtkStyle)

    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)

    @Html.LabelFor(model => model.PopGroupSize)
    @Html.TextBoxFor(model => model.PopGroupSize)

    <input type="submit" value="Add Boss" />
}